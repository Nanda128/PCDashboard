{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levellevel)s - %(message)s"
        },
        "colored": {
            "()": "colorlog.ColoredFormatter",
            "format": "%(log_color)s%(asctime)s - %(name)s - %(levellevel)s - %(message)s",
            "log_colors": {
                "DEBUG": "blue",
                "INFO": "green",
                "WARNING": "yellow",
                "ERROR": "red",
                "CRITICAL": "red,bg_white"
            }
        }
    },
    "handlers": {
        "file": {
            "class": "logging.FileHandler",
            "formatter": "standard",
            "filename": "logs/log.txt",
            "level": "DEBUG"
        },
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "colored",
            "level": "DEBUG"
        }
    },
    "loggers": {
        "root": {
            "handlers": ["file", "console"],
            "level": "DEBUG",
            "propagate": true
        }
    },
    "logging": "Extensive",
    "Server": {
        "host": "https://nanda128.eu.pythonanywhere.com"
    },
    "Database": {
        "host": "Nanda128.mysql.eu.pythonanywhere-services.com",
        "database": "Nanda128$Processes",
        "user": "Nanda128",
        "password": "NandaDBPass"
    },
    "Weather": {
        "api_key": "56f0bf4f66e774b2d21c5db9afea1cba",
        "default_city": "Limerick",
        "default_units": "metric"
    }
}
